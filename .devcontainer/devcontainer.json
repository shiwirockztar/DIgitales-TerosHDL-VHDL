{
  "name": "TerosHDL VHDL Development",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "teros-technology.teroshdl",
        "redhat.vscode-yaml",
        "ms-vscode.makefile-tools"
      ],
      "settings": {
        "teroshdl.documentation.enable": true,
        "teroshdl.vhdl.standar": "2008"
      }
    }
  },
  "postCreateCommand": "git lfs install && cp -f .teroshdl/teroshdl2_prj.json /root/.teroshdl2_prj.json",
  "remoteUser": "root"
}
